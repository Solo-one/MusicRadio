<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- layout background -->
    <item>
        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:startColor="#95e18e"
                android:centerColor="#ef6e6e"
                android:endColor="#5d98ea"/>
        </shape>
    </item>
    <!-- layout foreground -->
    <item
        android:bottom="5px"
        android:top="5px">
        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <solid android:color="#00bc7777" />
        </shape>
    </item>
</layer-list>