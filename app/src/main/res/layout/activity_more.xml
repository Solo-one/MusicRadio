<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:myApp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f1f1"
    tools:context="com.example.asus.kugoumusic.subscribe.TJFragment">

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/pull_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        myApp:ptrHeaderBackground="#e2e2e2"
        android:divider="@null"
        myApp:ptrDrawable="@drawable/indicator_arrow"
        myApp:ptrHeaderTextColor="#a9a7a7"
        myApp:ptrAnimationStyle="flip"/>

</FrameLayout>